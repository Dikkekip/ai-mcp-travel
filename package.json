{
  "name": "mcp-container-ts",
  "version": "1.0.0",
  "main": "./build/index.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV='production' tsx src/index.ts",
    "host": "cross-env NODE_ENV='development' tsx --watch src/host.ts",
    "generate-token": "tsx scripts/generate-token.ts",
    "tunnel": "tsx scripts/tunnel.ts",
    "build": "tsc",
    "dev": "cross-env NODE_ENV='development' tsx watch src/index.ts",
    "inspect": "mcp-inspector --config ./mcp-inspector.json --server mcp-server"
  },
  "keywords": [
    "modelcontextprotocol",
    "mcp",
    "mcp-server",
    "streamable-http",
    "sqlite",
    "express",
    "typescript",
    "authentication",
    "authorization",
    "jwt",
    "opentelemetry",
    "tracing"
  ],
  "license": "MIT",
  "description": "An MCP server that implements Authentication and Authorization with Streamable HTTP and communicates with a local sqlite database.",
  "dependencies": {
    "@azure/identity": "^4.12.0",
    "@azure/monitor-opentelemetry": "^1.14.0",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/instrumentation-fs": "^0.25.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.6.2",
    "connect-timeout": "^1.9.1",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^5.23.0",
    "type": "^2.7.3",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/connect-timeout": "^1.9.0",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/localtunnel": "^2.0.4",
    "@types/node": "^24.5.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
